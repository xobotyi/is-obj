{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "removeComments": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "es5",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "/dist",
    "outDir": "/dist",
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}